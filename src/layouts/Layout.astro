---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
const { theme } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/assets/imgs/fav_icon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
    <title>Trifolium</title>
  </head>
  <body>
    <header>
      <Header activeTheme={theme} />
    </header>
    <main>
      <slot />
    </main>
    <footer><Footer /></footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    position: relative;
  }
  header {
    position: fixed;
    width: 100%;
    z-index: 9999;
    top: 0%;
  }
  main {
    margin-top: 52px;
  }
</style>
