---
const { href, title, imgSrc, alt = "" } = Astro.props;
---

<a href={href} class="nav_card_container">
  <div class="card_text_container">
    <h5>{title}</h5>
    <div class="arrow_container">
      <img src="../assets/imgs/icon_arrow.svg" alt="" />
    </div>
  </div>
  <div class="image_container">
    <img src={imgSrc} alt={alt} />
  </div>
</a>

<style>
  .nav_card_container {
    width: 100%;
    height: 300px;
    overflow: hidden;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 0.2fr auto;
  }

  .nav_card_container > .image_container {
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav_card_container > .image_container img {
    width: auto;
    height: 100%;
    object-fit: cover;
  }

  .nav_card_container > .card_text_container {
    height: fit-content;
    padding: 0.5em var(--spacing-tiny);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    border: 1px solid var(--primary-color-500);
    box-sizing: border-box;
  }

  .nav_card_container > .card_text_container h5 {
    margin: 0;
  }

  .nav_card_container > .card_text_container .arrow_container {
    height: 100%;
    display: flex;
    align-items: center;
  }

  .nav_card_container > .card_text_container .arrow_container img {
    transform: scale(0.8);
    transition: 0.05s ease-in;
  }

  .nav_card_container:hover .card_text_container .arrow_container img {
    transform: rotate(45deg) scale(0.8);
  }

  .nav_card_container:hover .card_text_container {
    background-color: var(--primary-color-200);
  }

  .nav_card_container:active .card_text_container {
    background-color: var(--primary-color-500);
  }
</style>
