---
export interface Props {
  sectionId: string;
  title: string;
  imageSrc: string;
  captionLeft: string;
  captionRight: string;
  description: string;
  readMoreHref?: string;
  galleryImages?: string[];
}

const {
  sectionId,
  title,
  imageSrc,
  captionLeft,
  captionRight,
  description,
  readMoreHref,
  galleryImages = [],
} = Astro.props;
---

<div class="explanation-section" data-section={sectionId}>
  <div class="explanation_wrapper">
    <h4>{title}</h4>
    <div class="thumbnail">
      <div class="img_container">
        <img src={imageSrc} alt={title} />
      </div>
      <div class="caption">
        <p>{captionLeft}</p>
        <p>{captionRight}</p>
      </div>
    </div>
    <div class="card_contents">
      <div class="card_desc">
        <p set:html={description} />
        {readMoreHref && <a href={readMoreHref}>Read more</a>}
      </div>
    </div>
    {
      galleryImages.length > 0 && (
        <div class="image_scroll_facilities">
          {galleryImages.map((img) => (
            <img src={img} alt={title} />
          ))}
        </div>
      )
    }
  </div>
</div>

<style>
  .explanation-section {
    display: block;
    margin-bottom: var(--spacing-section);
  }

  .explanation_wrapper {
    width: 100%;
    max-height: 800px;
    display: grid;
    gap: var(--spacing-small);
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 1fr 5fr auto;
  }

  .explanation_wrapper > h4 {
    grid-area: 1 / 1 / 2 / 3;
    margin: var(--spacing-tiny) 0;
  }

  .thumbnail {
    grid-area: 2 / 1 / 3 / 3;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    width: 100%;
    height: 100%;
  }

  .img_container {
    width: 100%;
    overflow: hidden;
  }

  .img_container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .caption {
    display: flex;
    justify-content: space-between;
    text-transform: uppercase;
    margin-top: var(--spacing-tiny);
  }

  .caption p {
    margin: 0;
  }

  .card_contents {
    display: flex;
    flex-direction: column;
  }

  .card_desc a {
    text-decoration: underline;
  }

  .image_scroll_facilities {
    width: 100%;
    display: flex;
    gap: var(--spacing-tiny);
    overflow-x: auto;
  }

  .image_scroll_facilities img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  @media (max-width: 800px) {
    .explanation_wrapper {
      display: block;
    }

    .thumbnail {
      grid-area: unset;
    }
  }
</style>
