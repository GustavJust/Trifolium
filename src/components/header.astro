---
import "../styles/global.css";
const { activeTheme } = Astro.props;
---

<div class="flex header">
  <div class="nav_menu_mobile_container">
    <img src="/assets/imgs/close_icon_white.svg" alt="Close menu" />
    <nav class="nav_menu_mobile">
      <a href="/facilities">Facilities</a>
      <a href="/membership">Membership</a>
      <a href="/photostudio">Photo-studio</a>
      <a href="/dandp">Design & Production</a>
      <a href="/about">About</a>
      <a href="/contact" class="cta_mobile button giant">Book A Tour</a>
      <img
        src="/assets/imgs/logo_icon_white.svg"
        alt="logo icon"
        class="logo_icon"
      />
    </nav>
  </div>
  <div class="left-group">
    <a href="/">
      <img src="/assets/imgs/logo_wide.svg" alt="Logo" />
    </a>
  </div>
  <div class="right-group">
    <nav class="nav_web">
      <a
        href="/facilities"
        class={`underline-hover ${activeTheme === "facilities" ? "active" : ""}`}
        >Facilities</a
      >
      <a
        href="/membership"
        class={`underline-hover ${activeTheme === "membership" ? "active" : ""}`}
        >Membership</a
      >
      <a
        href="/photostudio"
        class={`underline-hover ${activeTheme === "photostudio" ? "active" : ""}`}
        >Photo-studio</a
      >
      <a
        href="/dandp"
        class={`underline-hover ${activeTheme === "dandp" ? "active" : ""}`}
        >Design & Production</a
      >
      <a
        href="/about"
        class={`underline-hover ${activeTheme === "about" ? "active" : ""}`}
        >About</a
      >
    </nav>
    <button class="burger_icon">
      <img src="/assets/imgs/burger_icon.svg" alt="burger menu icon" />
    </button>
    <a href="/contact" class="cta_web button medium_header">Book A Tour</a>
  </div>
</div>

<style>
  .header {
    width: 100%;
    box-sizing: border-box;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-tiny) var(--spacing-small);
    /* position: relative; */
    background-color: var(--white-color-100);
  }

  .header .left-group {
    width: 200px;
    align-items: center;
  }
  .header .left-group a img {
    width: 100%;
  }
  .header .right-group {
    display: flex;
    height: 100%;
    justify-content: right;
    align-items: center;
    gap: var(--spacing-small);
  }
  .header .right-group nav {
    display: flex;
    gap: var(--spacing-small);
  }

  .burger_icon {
    display: none;
    background-color: transparent;
    border: transparent;
    width: 40px;
  }

  .burger_icon img {
    width: 100%;
    aspect-ratio: 1/1;
  }

  .nav_menu_mobile a {
    width: fit-content;
    text-wrap: nowrap;
    color: var(--white-color-100);
  }
  .nav_menu_mobile a.button {
    background-color: var(--secondary-color-500);
    display: inline !important;
  }

  .nav_menu_mobile a {
    width: 100%;
    margin-left: var(--spacing-tiny);
    display: flex;
    text-align: left;
  }

  @media (width > 990px) {
    .nav_menu_mobile_container {
      display: none;
    }
    /* .cta_web {
      margin-right: 16px;
    } */

    .right-group a {
      font-weight: 500;
    }
  }

  @media (width < 990px) {
    .header {
      position: relative;
    }

    .logo_icon {
      margin: 1rem;
      margin-top: auto;
      margin-bottom: 4rem;
    }

    .burger_icon {
      display: block;
    }
    .nav_web,
    .cta_web {
      display: none !important;
    }
    .nav_menu_mobile_container {
      display: block;
      position: fixed;
      top: -1px;
      left: -100vw;
      background-color: var(--primary-color-500);
      width: 100%;
      height: 100%;
      transition: left 0.3s ease-in-out;
      box-sizing: border-box;
      overflow: hidden;
    }

    .nav_menu_mobile_container img {
      width: 30px;
      aspect-ratio: 1/1;
      position: absolute;
      top: 5%;
      right: 10%;
    }
    .nav_menu_mobile_container img.logo_icon {
      width: 100px;
      position: absolute;
      top: -100;
      left: 3%;
      transform: translate(50%);
    }
    .nav_menu_mobile_container .nav_menu_mobile {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 1em;
      /* width: 100%; */
      height: fit-content;
      font-size: 2.5em;
      font-weight: 600;
      margin-top: 3rem;
    }

    .nav_menu_mobile_container.show {
      left: -1px;
      transition: left 0.3s ease-in-out;
      z-index: 999;
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const menu = document.querySelector(".nav_menu_mobile_container");
    const burger = document.querySelector(".burger_icon");
    const close = menu.querySelector("img:not(.logo_icon)");

    if (burger && menu && close) {
      burger.addEventListener("click", () => {
        menu.classList.add("show");
      });

      close.addEventListener("click", () => {
        menu.classList.remove("show");
      });
    }
  });
</script>
