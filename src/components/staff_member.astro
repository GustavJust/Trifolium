---
const { Name, ImgSrc, Title } = Astro.props;
---

<div class="staff_member_card">
  <h4>{Name}</h4>
  <p class="caption">{Title}</p>
  <div class="staff_img_frame">
    <img src={ImgSrc} alt="Trifolium staff profile" />
  </div>
</div>

<style>
  .staff_member_card {
    margin: var(--spacing-large) 0;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--black-color-100);
    overflow: hidden;
    > .staff_img_frame {
      /* border: 1px solid black; */
      display: flex;
      justify-content: center;
      height: 500px;
      overflow: hidden;
      margin-top: var(--spacing-small);
    }
    > .staff_img_frame img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    > h4,
    p {
      margin: 0 20px;
    }
    > h4 {
      margin-top: var(--spacing-tiny);
      margin-bottom: var(--spacing-tiny);
      line-height: 1em;
    }
  }
</style>
