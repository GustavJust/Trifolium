---
const { Name, ImgSrc, Title } = Astro.props;
---

<div class="staff_member_card">
  <div class="staff_text_wrapper">
    <h4>{Name}</h4>
    <p class="caption">{Title}</p>
  </div>
  <div class="staff_img_frame">
    <img src={ImgSrc} alt="Trifolium staff profile" />
  </div>
</div>

<style>
  .staff_member_card {
    margin: var(--spacing-small) 0;
    display: grid;
    grid-template-columns: 1fr;
    border: 1px solid var(--black-color-100);
    > .staff_img_frame {
      display: flex;
      justify-content: center;
      height: auto;
      overflow: hidden;}
    > .staff_img_frame img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    > div h4,
    div p {
      margin: var(--spacing-small);
      line-height:1
    }
    > div h4 {
      margin-top: var(--spacing-tiny);
      margin-bottom: 0.3em;
      line-height: 1em;
    }
  }

  @media (min-width: 470px) and (max-width: 799px) {
    .staff_member_card {
      height: fit-content;
      max-width: 420px;
      justify-self: center;
    }

    .staff_img_frame {
      height: fit-content !important;
      > img {
        /* width: 100%; */
        aspect-ratio: 1/3;
        /* object-fit: cover; */
      }
    }
  }

  @media (width > 800px) {
    .staff_text_wrapper {
  display: grid;
  grid-template-columns: subgrid; /* inherit parent's columns */
  gap: var(--spacing-tiny);
}
  }
</style>
