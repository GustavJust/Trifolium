---
const { Name, ImgSrc, Title } = Astro.props;
---

<div class="staff_member_card">
  <div>
    <h4>{Name}</h4>
    <p class="caption">{Title}</p>
  </div>
  <div class="staff_img_frame">
    <img src={ImgSrc} alt="Trifolium staff profile" />
  </div>
</div>

<style>
  .staff_member_card {
    margin: var(--spacing-small) 0;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--black-color-100);
    overflow: hidden;
    height: fit-content;
    max-height: 590px;
    > .staff_img_frame {
      /* border: 1px solid black; */
      display: flex;
      justify-content: center;
      height: 100%;
      overflow: hidden;
      margin-top: var(--spacing-small);
    }
    > .staff_img_frame img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }
    > div h4,
    div p {
      margin: 0 20px;
    }
    > div h4 {
      margin-top: var(--spacing-tiny);
      margin-bottom: 0.3em;
      line-height: 1em;
    }
  }

  @media (min-width: 470px) and (max-width: 799px) {
    .staff_member_card {
      height: fit-content;
      max-width: 420px;
      justify-self: center;
    }

    .staff_img_frame {
      height: fit-content !important;
      > img {
        /* width: 100%; */
        aspect-ratio: 1/3;
        /* object-fit: cover; */
      }
    }
  }

  @media (width > 800px) {
    .staff_member_card {
      margin: 0;
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 100px auto;
    }
  }
</style>
