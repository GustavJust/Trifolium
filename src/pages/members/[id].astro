const { member } = Astro.props;
---

<Layout>
  <section class="hero_section">
    <div class="hero_img_container">
      <img src={member.picture} alt={member.name} />
    </div>

    <div class="header_group1">
      <h1>{member.name}</h1>
      <img src="../assets/imgs/arrow_icon_red.svg" alt="" />
    </div>
  </section>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>

  <section class="img_w_txt">
    {
      member.h1Title && (
        <div class="txt_box">
          <h5>{member.h1Title}</h5>
        </div>
      )
    }

    <div class="txt_box">
      <p>{member.description}</p>
      <div class="contact_info">
        {member.contactEmail && <p>Email: {member.contactEmail}</p>}
        {member.contactWebsite && <p>Website: {member.contactWebsite}</p>}
        {member.contactLinkedin && <p>LinkedIn: {member.contactLinkedin}</p>}
        {member.contactNumber && <p>Phone: {member.contactNumber}</p>}
        {member.contactSoMe && <p>SoMe: {member.contactSoMe}</p>}
      </div>
    </div>
  </section>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>

  <section class="bottom_cta">
    <h2>Explore our facilities</h2>
    <p>With workspaces, advanced tools, and workshops under one roof, you can create physical or digital products from concept to launch.</p>
    <a href="/facilities">
      <button class="large"> Explore facilities</button>
    </a>
  </section>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>
</Layout>

<style>
  section {
    margin-left: var(--spacing-small);
    margin-right: var(--spacing-small);
  }

  .header_group1 {
    display: flex;
    padding-top: var(--spacing-small);
    padding-bottom: var(--spacing-small);
    gap: var(--spacing-tiny);
    flex-direction: row;
    align-items: baseline;
    > h1 {
      text-transform: uppercase;
    }
    > img {
      width: 15px;
      aspect-ratio: 1/1;
      transform: rotate(135deg);
    }
  }
  section.hero {
    margin-bottom: 0;
  }

  .hero {
    margin-left: var(--spacing-small);
    margin-right: var(--spacing-small);
    box-sizing: border-box;
    width: calc(100% - 2 * var(--spacing-small));
  }

  .hero_img_container {
    width: 100%;
    height: auto;
    overflow: hidden;
  }

  .hero_img_container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero_section {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-small);
    margin: 0 var(--spacing-small);
  }

  .hero_img_container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .header_group {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-tiny);
    padding: 0 var(--spacing-small);
  }

  .header_group h1 {
    text-transform: uppercase;
  }

  .header_group img {
    width: 15px;
    aspect-ratio: 1/1;
    transform: rotate(135deg);
  }

  @media (min-width: 768px) {
    .hero_section {
      flex-direction: row;
      align-items: center;
    }

    .hero_img_container {
      width: 50%;
    }

    .header_group {
      width: 50%;
      padding: 0 var(--spacing-small);
    }

    .header_group h1 {
      font-size: 4rem;
      line-height: 1.1;
    }

    .contact_info {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      > p {
        font-size: 14px;
      }
    }

    .img_w_txt {
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;
    }

    .img_w_txt > .txt_box {
      width: 48%;
    }

    .img_w_txt > .txt_box:only-child {
      margin: 0 auto;
      width: 60%;
    }
  }
</style>
