---

<Layout>
  <section class="hero">
    <div class="hero_img_container">
      <img src={member.picture} alt={member.name} />
    </div>
  </section>

  <div class="header_group">
    <h1>{member.name}</h1>
    <img src="../assets/imgs/arrow_icon_red.svg" alt="" />
  </div>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>

  {
    member.h1Title && (
      <section class="img_w_txt">
        <div class="txt_box">
          <h5>{member.h1Title}</h5>
        </div>
      </section>
    )
  }

  <section class="img_w_txt">
    <div class="txt_box">
      <p>{member.description}</p>
      {member.contactEmail && <p>Email: {member.contactEmail}</p>}
      {member.contactWebsite && <p>Website: {member.contactWebsite}</p>}
      {member.contactLinkedin && <p>LinkedIn: {member.contactLinkedin}</p>}
      {member.contactNumber && <p>Phone: {member.contactNumber}</p>}
      {member.contactSoMe && <p>SoMe: {member.contactSoMe}</p>}
    </div>
  </section>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>

  <section class="bottom_cta">
    <h2>Explore our facilities</h2>
    <p>With workspaces, advanced tools, and workshops under one roof, you can create physical or digital products from concept to launch.</p>
    <a href="/facilities">
      <button class="large"> Explore facilities</button>
    </a>
  </section>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>
</Layout>

<style>
  section {
    margin-left: var(--spacing-small);
    margin-right: var(--spacing-small);
  }

  .header_group {
    display: flex;
    padding: var(--spacing-small);
    gap: var(--spacing-tiny);
    > h1 {
      text-transform: uppercase;
    }
    > img {
      width: 15px;
      aspect-ratio: 1/1;
      transform: rotate(135deg);
    }
  }
  section.hero {
    margin-bottom: 0;
  }

  .hero {
    margin-left: var(--spacing-small);
    margin-right: var(--spacing-small);
    box-sizing: border-box;
    width: calc(100% - 2 * var(--spacing-small));
  }

  .hero_img_container {
    width: 100%;
    height: 75vh;
    overflow: hidden;
    box-sizing: border-box;
  }

  .hero_img_container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .member_detail {
    padding: 2rem;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .member_detail img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
  }
</style>
