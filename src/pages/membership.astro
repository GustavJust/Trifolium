---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/hero.astro";

const theme = "membership";
---

<Layout theme={theme}>
  <Hero
    video="/assets/imgs/video/index_video.mp4"
    title="Membership"
    description="Trifolium offers modern, flexible facilities designed to support collaboration, innovation, and community across all activities and events."
    descLeft=""
    descRight=""
    poster="/assets/imgs/lazyload/membership_lazyload.webp"
  />
  <section class="txt_only">
    <h2>Our memberships</h2>
    <p>
      Trifolium offers modern, flexible facilities designed to support
      collaboration, innovation, and community across all activities and events.
    </p>
  </section>

  <section>
    <div class="membership_cards_container">
      <div class="membership_card">
        <h3>Basic Access</h3>
        <div class="price_container">
          <h4 class="price">900,-</h4><p class="currency">DKK/mth ex. VAT</p>
        </div>
        <div class="membership_included">
          <h5>Included</h5>
          <ul>
            <li>Access to blue area</li>
            <li>Free WiFi</li>
            <li>Free Parking</li>
            <li>Access to Trifoliums common areas</li>
            <li>Access to the daily lunch offer</li>
            <li>Invitations to social events</li>
            <li>Private Key-Fob for easy access</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a><a
            href="/facilities"
            class="button large alt">See Facilities</a
          >
        </div>
      </div>

      <div class="membership_card">
        <h3>Village Access</h3>
        <div class="price_container">
          <h4 class="price">1400,-</h4><p class="currency">DKK/mth ex. VAT</p>
        </div>
        <div class="membership_included">
          <h5>Included</h5>
          <ul>
            <li>Access to flex desks 24/7</li>
            <li>Access to all meeting rooms</li>
            <li>Free WiFi</li>
            <li>Free Parking</li>
            <li>Access to Trifoliums common areas</li>
            <li>Access to the daily lunch offer</li>
            <li>Invitations to social events</li>
            <li>Private Key-Fob for easy access</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a><a
            href="/offices#studio_village"
            class="button large alt">See Facilities</a
          >
        </div>
      </div>

      <div class="membership_card">
        <h3>Office Access</h3>
        <div class="price_container">
          <h4 class="price">2900,-</h4><p class="currency">DKK/mth ex. VAT</p>
        </div>
        <div class="membership_included">
          <h5>Included</h5>
          <ul>
            <li>Access to private desk in closed office</li>
            <li>Access to all meeting rooms</li>
            <li>Free WiFi</li>
            <li>Free Parking</li>
            <li>Access to Trifoliums common areas</li>
            <li>Access to the daily lunch offer</li>
            <li>Invitations to social events</li>
            <li>Private Key-Fob for easy access</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a><a
            href="/offices#closed_offices"
            class="button large alt">See Facilities</a
          >
        </div>
      </div>

      <div class="membership_card">
        <h3>Full-time Workshop Access</h3>
        <div class="price_container">
          <h4 class="price">4200,-</h4><p class="currency">DKK/mth ex. VAT</p>
        </div>
        <div class="membership_included">
          <h5>Included</h5>
          <ul>
            <li>Access to all workshops 24/7</li>
            <li>Access to material shop</li>
            <li>Access to blue area flex desks</li>
            <li>Access to all meeting rooms</li>
            <li>Access to Trifoliums common areas</li>
            <li>Access to the daily lunch offer</li>
            <li>Invitations to social events</li>
            <li>Private Key-Fob for easy access</li>
            <li>Free WiFi</li>
            <li>Free Parking</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a>
          <a href="/workshops" class="button large alt">See Facilities</a>
        </div>
      </div>

      <div class="membership_card">
        <h3>Part-time Workshop Access</h3>
        <div class="price_container">
          <h4 class="price">2800,-</h4><p class="currency">DKK/mth ex. VAT</p>
        </div>
        <div class="membership_included">
          <h5>Included</h5>
          <ul>
            <li>Access to all workshops after 16pm + weekends</li>
            <li>Access to material shop</li>
            <li>Access to blue area flex desks</li>
            <li>Access to all meeting rooms</li>
            <li>Access to Trifoliums common areas</li>
            <li>Access to the daily lunch offer</li>
            <li>Invitations to social events</li>
            <li>Private Key-Fob for easy access</li>
            <li>Free WiFi</li>
            <li>Free Parking</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a>
          <a href="/workshops" class="button large alt">See Facilities</a>
        </div>
      </div>

      <div class="membership_card">
        <h3>Storage Addon</h3>
        <div class="price_container">
          <p class="currency">from</p><h4 class="price">320,-</h4><p
            class="currency"
          >
            DKK/mth ex. VAT
          </p>
        </div>
        <div class="membership_included">
          <h5>Storage types</h5>
          <ul>
            <li>Shelf storage</li>
            <li>Floor storage 3-10 sq. m.</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a>
          <a href="/workshops#storage" class="button large alt"
            >See Facilities</a
          >
        </div>
      </div>

      <div class="membership_card">
        <h3>Photo Community</h3>
        <div class="price_container">
          <h4 class="price">5900,-</h4><p class="currency">DKK/mth ex. VAT</p>
        </div>
        <div class="membership_included">
          <h5>Included</h5>
          <ul>
            <li>Access to a private desk</li>
            <li>Unlimited bookings on the photo studio</li>
            <li>Access to all meeting rooms</li>
            <li>Free WiFi</li>
            <li>Free Parking</li>
            <li>Access to Trifoliums common areas</li>
            <li>Access to the daily lunch offer</li>
            <li>Invitations to social events</li>
            <li>Private Key-Fob for easy access</li>
          </ul>
        </div>
        <div class="button_container">
          <a href="/contact" class="button large">Signup for a tour</a>
          <a href="/photostudio" class="button large alt">See Facilities</a>
        </div>
      </div>
    </div>
  </section>

  <div class="logo_divider">
    <img src="/assets/imgs/logo_icon.svg" alt="" />
  </div>

  <section class="img_w_txt">
    <div class="img_block">
      <img src="/assets/imgs/membership_block.svg" alt="" />
    </div>
    <div class="txt_box">
      <h2>How does it work?</h2>
      <p>
        At Trifolium, we understand that starting a business comes with plenty
        of uncertainty. Your workspace shouldn’t be one of them. That’s why our
        memberships are modular and based on how many people in your team need
        access. You only pay for what you need.
        <br /><br />
        If things slow down, you can downgrade with just two months’ notice. And
        when business picks up, it’s easy to scale up again. Simple, flexible, and
        built to support your growth.
      </p>
    </div>
  </section>

  <div class="logo_divider">
    <img src="/assets/imgs/logo_icon.svg" alt="" />
  </div>

  <section class="bottom_cta">
    <h2>Explore our facilities</h2>
    <p>
      With workspaces, advanced tools, and workshops under one roof, you can
      create physical or digital products from concept to launch.
    </p>
    <a href="/facilities" class="button large"> Explore facilities</a>
  </section>

  <div class="logo_divider">
    <img src="../assets/imgs/logo_icon.svg" alt="" />
  </div>
</Layout>

<style>
  section {
    margin-left: var(--spacing-small);
    margin-right: var(--spacing-small);
  }
  .membership_cards_container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-small);
  }
  .membership_card {
    border: 1px solid var(--primary-color-500);
    padding: var(--spacing-small);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-small);
    > h3 {
      margin: 0;
      font-size: 4em;
      line-height: 1;
    }
    > .price_container {
      display: flex;
      align-items: center;
      gap: var(--spacing-small);
    }
    > .price_container h4,
    p {
      margin: 0;
      text-align: center;
      height: fit-content;
    }
    > h5 {
      margin: 0;
    }
    > a {
      text-decoration: underline;
      margin-left: var(--spacing-small);
    }
    > .button_container {
      display: flex;
      justify-content: space-between;
      gap: var(--spacing-small);
    }
    > .button_container a {
      flex-grow: 1;
    }
    > .button_container a.button {
      width: 100%;
      font-size: 20px;
    }
    > ul {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-tiny);
      padding-left: var(--spacing-medium);
      list-style-image: url("../assets/imgs/icon_plus1.svg");
    }
    > ul li {
    }
  }

  .membership_included h5 {
    margin: 0;
  }

  .img_block {
    display: flex;
    justify-content: right;
    width: 100%;
    max-height: 40vh;
  }

  @media (width > 800px) {
    .membership_cards_container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: var(--spacing-small);
    }

    .membership_card {
      display: grid;
      grid-template-rows: subgrid;
      grid-row: span 6;
    }

    .img_block {
      display: flex;
      justify-content: right;
      width: 50%;
      max-height: 60vh;
    }

    .txt_only p {
      margin-top: 10px;
    }

    .txt_only h2 {
      line-height: 1;
    }
  }
</style>
