<style>
  section {
    margin-left: var(--spacing-small);
    margin-right: var(--spacing-small);
  }
  .membership_cards_container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-small);
  }
  .membership_card {
    border: 1px solid var(--primary-color-500);
    padding: var(--spacing-small);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-small);
    > h3 {
      margin: 0;
      font-size: 4em;
      line-height: 0.9em;
    }
    > .price_container {
      display: flex;
      align-items: center;
      gap: var(--spacing-small);
    }
    > .price_container h4,
    p {
      margin: 0;
      text-align: center;
      height: fit-content;
    }
    > h5 {
      margin: 0 0;
    }
    > a {
      text-decoration: underline;
      margin-left: var(--spacing-small);
    }
    > .button_container {
      display: flex;
      justify-content: space-between;
      gap: var(--spacing-small);
    }
    > .button_container a {
      flex-grow: 1;
    }
    > .button_container a button {
      width: 100%;
    }
    > ul {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-tiny);
      padding-left: var(--spacing-medium);
      list-style-image: url("../assets/imgs/icon_plus1.svg");
    }
    > ul li {
    }
  }

  @media (width > 800px) {
    .membership_cards_container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 2rem;
    }

    .membership_card {
      display: grid;
      grid-template-rows: subgrid;
      grid-row: span 6;
    }
  }
</style>
